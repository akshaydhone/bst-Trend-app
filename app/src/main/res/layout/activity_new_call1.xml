<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/newbst"
    tools:context=".NewCall1">


    <android.support.v7.widget.Toolbar
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:theme="@style/ToolbarTheme"
        android:elevation="5dp" />


    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_gravity="right"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/arial"
        android:gravity="end"
        android:text="Welcome"
        android:textColor="#8d7b76"
        android:textStyle="bold" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bgHeader"
        android:layout_margin="20dp">
        <RelativeLayout
            android:id="@+id/rlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="50dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <requestFocus />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Main Product Category"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/s1"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:fontFamily="@font/arial"
                         />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Product Name"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold" />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/s2"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:fontFamily="@font/arial"
                        android:entries="@array/print_inspection"
                        android:prompt="@string/tag_prompt4" />






                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Sub-Category"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/s3"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:fontFamily="@font/arial"
                       />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Product Name"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold" />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/s4"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:fontFamily="@font/arial"
                       />








                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Call Scheduled Date"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold" />









                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/e3"
                        android:textSize="15sp"
                        android:fontFamily="@font/arial"
                        android:hint="Select Date" />

                 <!--   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Engineer's In-Time"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/e4"
                        android:textSize="15sp"
                        android:hint="Select Time"

                       />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Call Assigned to"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/e5"
                        android:textSize="15sp"
                        android:fontFamily="@font/arial"
                        android:hint="Engg name and admin">
                    </TextView>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv"
                android:layout_alignLeft="@+id/cv"
                android:layout_alignRight="@+id/cv"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="35dp"
                android:elevation="10dp">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ui"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:id="@+id/b1"
                    android:fontFamily="@font/arial"
                    android:textColor="@color/colorWhite" />




            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorBlue"
        app:itemTextColor="#fff"
        app:menu="@menu/bottom_nav_menu"/>



</RelativeLayout>