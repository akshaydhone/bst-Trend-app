<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbst"
    tools:context=".NewCall4">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:theme="@style/ToolbarTheme"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_gravity="right"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/arial"
        android:gravity="end"
        android:text="Welcome"
        android:textColor="#8d7b76"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bgHeader"
        android:layout_margin="20dp">
        <RelativeLayout
            android:id="@+id/rlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/secret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingBottom="50dp">
                    <requestFocus />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Product's Photo"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/select_image"
                        android:layout_width="218dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Select Image"
                        android:visibility="invisible" />


                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_below="@+id/select_image"
                        android:layout_marginLeft="-23dp"

                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/caml" />

                    <ImageView
                        android:id="@+id/user_image1"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="end"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="-120dp"
                        android:layout_marginRight="-15dp"

                        app:srcCompat="@drawable/caml" />


                    <ImageView
                        android:id="@+id/user_image2"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="-23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"

                        app:srcCompat="@drawable/caml" />



                    <ImageView
                        android:id="@+id/user_image3"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_gravity="end"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="-120dp"
                        android:layout_marginRight="-15dp"

                        app:srcCompat="@drawable/caml" />


                    <TextView
                        android:id="@+id/url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Unique IMG Url:"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />


                    <!--  <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Payment To:"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Acc No:3456xxxx9087"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Payment Via"
                        android:textColor="@color/colorPurple"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/s1"

                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:entries="@array/tag_arrays3"

                        android:prompt="@string/tag_prompt3" />-->


                    <Button
                        android:id="@+id/b1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_ui"
                        android:text="Save"
                        android:fontFamily="@font/arial"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />


                    <!--  <Button
                        android:id="@+id/b2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_ui"
                        android:text="Submit"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />-->


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv"
                android:layout_alignLeft="@+id/cv"
                android:layout_alignRight="@+id/cv"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="35dp"
                android:elevation="10dp">








            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/colorBlue"
        app:itemTextColor="#fff"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"/>

</RelativeLayout>